<table>
  <tr>
    <th>Book Title</th>
    <th>Actions</th>

  </tr>
  <% @books.each do |book|%>
  <tr>
    <td><%=book.book_title%></td>
    <td><%= link_to "Edit", edit_book_path(book) %> | <%= link_to "Delete", book_path(book), data: { method: :delete, confirm: "Are you sure?" } %>
    </td>
  </tr>
  <% end %>
</table>

<center><%= link_to "Create New Book", new_book_path%> </center>



<style>
table {
  font-family: arial, sans-serif;
  border-collapse: collapse;
  width: 100%;
}

td, th {
  border: 1px solid #dddddd;
  text-align: left;
  padding: 8px;
}

tr:nth-child(even) {
  background-color: #dddddd;
}
</style>
